@using Treachery.Shared;
@using Treachery.Client.GenericComponents;
@inherits BiddingPanel<BlackMarketBid>

@{
    base.BuildRenderTree(__builder);
}

@code {

    protected override BlackMarketBid ConfirmedResult => new BlackMarketBid(Game, Faction) { Passed = false, Amount = amount, AllyContributionAmount = allyContributionAmount, RedContributionAmount = redContributionAmount };

    protected override BlackMarketBid PassedResult => new BlackMarketBid(Game, Faction) { Passed = true };

    protected override bool ShowRepeatAutoPass => false;

    protected override bool CanUseKarma => false;

    protected override bool CanUseRedSecretAlly => false;

    protected override int MaxAllyBidAmount => BlackMarketBid.ValidMaxAllyAmount(Game, Player);

    protected override int MaxBidAmount => BlackMarketBid.ValidMaxAmount(Player);

    protected override string AuctionDescription => "Black Market";
}
