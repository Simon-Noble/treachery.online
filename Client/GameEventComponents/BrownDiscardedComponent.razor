@using Treachery.Shared
@using Treachery.Client.GenericComponents;
@inherits GameEventComponent<BrownDiscarded>

<GameEventComponentLayout IsUrgent="@IsUrgent" BackgroundStyle="@BackgroundStyle" HeaderStyle="@HeaderStyle" CollapsedType=GetType()>

    <Header>You may discard surplus duplicate cards for 3 and @Skin.Current.Describe(TreacheryCardType.Useless) cards for 2 @Skin.Current.Describe(Concept.Resource) each</Header>
    <Body>

        <SelectFromImageComponent @bind-Value="card" Values="BrownDiscarded.ValidCards(Player)" Required="true" ImageWidth="80" />

        <ButtonRowComponent Confirm="Confirm" ConfirmText="@Skin.Current.Format("Discard {0}", card)" ConfirmError=@Validation />

    </Body>

</GameEventComponentLayout>

@code {

    protected override Faction IsFactionSpecific => Faction.Brown;

    private TreacheryCard card;

    protected override BrownDiscarded ConfirmedResult => new BrownDiscarded(Game) { Initiator = Faction, Card = card };
}
