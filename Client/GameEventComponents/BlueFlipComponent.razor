@using Treachery.Shared
@using Treachery.Client.GenericComponents;
@inherits GameEventComponent<BlueFlip>

<GameEventComponentLayout Border="@Border" BackgroundStyle="@BackgroundStyle">

    <Header>Choose to be fighters or advisors in @(BlueFlip.GetTerritory(h.Game)).</Header>
    <Body>
        <ButtonRowComponent Confirm="Confirm" ConfirmText="Fighters" ConfirmError="@validationError" Other="Other" OtherText="Advisors"/>
    </Body>

</GameEventComponentLayout>

@code {

    protected override bool IsUrgent => true;
    protected override Faction IsFactionSpecific => Faction.Blue;

    protected override BlueFlip ConfirmedResult => new BlueFlip(h.Game) { Initiator = h.Faction, AsAdvisors = false };

    protected override BlueFlip OtherResult => new BlueFlip(h.Game) { Initiator = h.Faction, AsAdvisors = true };
}
