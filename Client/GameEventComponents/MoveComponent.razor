@using Treachery.Shared
@using Treachery.Client.GenericComponents;
@inherits PlacementComponent<Move>

@{
    base.BuildRenderTree(__builder);
}

@code {

    override protected bool IsUrgent => true;

    override protected Move ConfirmedResult => new Move(Game, Faction) { ForceLocations = forces, To = toLocation, AsAdvisors = asAdvisors, Passed = false };

    override protected Move PassedResult => new Move(Game, Faction) { Passed = true };

    override protected bool InformAboutCaravan => Player.Has(TreacheryCardType.Caravan);

    override protected string Title => "Perform a Move";

    override protected bool MayPass => true;
}
