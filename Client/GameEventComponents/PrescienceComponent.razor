@using Treachery.Shared
@using Treachery.Client.GenericComponents;
@inherits GameEventComponent<Prescience>

<div class="card p-1 mb-2 border-danger">

    <div class="card-header">Use Prescience</div>

    <div class="card-body">

        <SelectComponent @bind-Value="aspect" Values="Prescience.ValidAspects">
            <Label>What should be foreseen?</Label>
        </SelectComponent>

        <button class="btn btn-primary" @onclick="Confirm" disabled=@(!Valid)>Confirm</button>

        <div class="text-danger bg-dark">@validationError</div>

    </div>
</div>

@code {

    private PrescienceAspect aspect;

    protected override void OnAfterRender(bool firstRender)
    {
        Initialize<PrescienceAspect, PrescienceAspect>(ref aspect, Prescience.ValidAspects);
    }

    protected override Prescience ConfirmedResult
    {
        get
        {
            return new Prescience(h.Game) { Initiator = h.Faction, Aspect = aspect };
        }
    }
}
