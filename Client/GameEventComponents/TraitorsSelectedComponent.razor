@using Treachery.Shared
@using Treachery.Client.GenericComponents;
@inherits GameEventComponent<TraitorsSelected>

<div class="card p-1 mb-2 border-primary">
    <div class="card-header">Select which traitor to keep</div>
    <div class="card-body">

        <SelectFromImageComponent @bind-Value="traitor" Values="h.Player.Traitors" ImageURLs="h.Player.Traitors.Select(h => Skin.Current.GetImageURL(h))" PopupHTMLs="h.Player.Traitors.Select(h => Support.GetHeroHoverHTML(h))" ImageWidth="80" />

        <button class="btn btn-primary mt-1" @onclick="Confirm" disabled=@(!Valid)>Ok</button>
        <div class="text-danger bg-dark">@validationError</div>

    </div>
</div>

@code {

    private IHero traitor;

    protected override TraitorsSelected ConfirmedResult
    {
        get
        {
            return new TraitorsSelected(h.Game) { Initiator = h.Faction, SelectedTraitor = traitor };
        }
    }
}