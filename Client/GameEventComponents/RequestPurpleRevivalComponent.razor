@using Treachery.Shared
@using Treachery.Client.GenericComponents;
@inherits GameEventComponent<RequestPurpleRevival>

<GameEventComponentLayout Border="@Border" BackgroundStyle="@BackgroundStyle" HeaderStyle="@HeaderStyle" BodyStyle="@BodyStyle" @bind-Collapsed="@Collapsed">

    <Header>Request @Skin.Current.Describe(Faction.Purple) Revival of one of your leaders?</Header>
    <Body>

        <SelectHeroComponent Game="Game" @bind-Value="hero" Values="RequestPurpleRevival.ValidTargets(Game, Player)" />

        <ButtonRowComponent Confirm="Confirm" ConfirmText="Confirm" ConfirmError="@Validation" />

    </Body>

</GameEventComponentLayout>

@code {

    protected override Faction IsFactionSpecific => Faction.Purple;

    private IHero hero;

    protected override RequestPurpleRevival ConfirmedResult => new RequestPurpleRevival(Game) { Initiator = Faction, Hero = hero };
}