@using Treachery.Shared
@using Treachery.Client.GenericComponents;
@inherits GameEventComponent<GreySelectedStartingCard>

<GameEventComponentLayout Border="@Border" BackgroundStyle="@BackgroundStyle" HeaderStyle="@HeaderStyle" BodyStyle="@BodyStyle" @bind-Collapsed="@Collapsed">

    <Header>Select your starting Treachery Card. The remaining cards will be shuffled and dealt to the other factions.</Header>
    <Body>
        <SelectCardComponent @bind-Value="card" Values="Game.StartingTreacheryCards.Items" />
        <ButtonRowComponent Confirm="Confirm" ConfirmText="Confirm" ConfirmError="@Validation" />
    </Body>

</GameEventComponentLayout>

@code {

    protected override bool IsUrgent => true;
    protected override Faction IsFactionSpecific => Faction.Grey;

    private TreacheryCard card;

    protected override GreySelectedStartingCard ConfirmedResult => new GreySelectedStartingCard(Game) { Initiator = Faction, Card = card };
}
