@using Treachery.Shared
@using Treachery.Client.GenericComponents;
@inherits GameEventComponent<AllianceOffered>

<GameEventComponentLayout IsUrgent="@IsUrgent" BackgroundStyle="@BackgroundStyle" HeaderStyle="@HeaderStyle" BodyStyle="@BodyStyle" @bind-Collapsed="@Collapsed">

    <Header>Offer a faction to form an Alliance</Header>

    <Body>
        <SelectFactionComponent @bind-Value="target" Values="Game.PlayersOtherThan(Player)" />
        <ButtonRowComponent Confirm="Confirm" ConfirmText="Offer Alliance" ConfirmError=@Validation />
    </Body>

</GameEventComponentLayout>

@code {

    private Faction target;

    protected override AllianceOffered ConfirmedResult => new AllianceOffered(Game) { Initiator = Faction, Target = target };
}
