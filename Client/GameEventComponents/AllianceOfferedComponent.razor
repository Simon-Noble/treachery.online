@using Treachery.Shared
@using Treachery.Client.GenericComponents;
@inherits GameEventComponent<AllianceOffered>

<GameEventComponentLayout Border="@Border" BackgroundStyle="@BackgroundStyle">

    <Header>Offer a faction to form an Alliance</Header>

    <Body>
        <SelectFactionComponent @bind-Value="target" Values="h.Game.ValidTargets(h.Player)" />
        <ButtonRowComponent Confirm="Confirm" ConfirmText="Confirm" ConfirmError="@validationError" />
    </Body>

</GameEventComponentLayout>

@code {

    private Faction target;

    protected override void OnAfterRender(bool firstRender)
    {
        //Initialize<Faction, Faction>(ref target, h.Game.ValidTargets(h.Player));
    }

    protected override AllianceOffered ConfirmedResult => new AllianceOffered(h.Game) { Initiator = h.Faction, Target = target };
}
