@using Treachery.Shared
@using Treachery.Client.GenericComponents;
@inherits GameEventComponent<WhiteAnnouncesAuction>

<GameEventComponentLayout IsUrgent="@IsUrgent" BackgroundStyle="@BackgroundStyle" HeaderStyle="@HeaderStyle" BodyStyle=@BodyStyle CollapsedType=GetType()>

    <Header>Auction a card from your @Skin.Current.Describe(Faction.White) card cache First or Last?</Header>
    <Body>
        <ButtonRowComponent Confirm="Confirm" ConfirmText="First" ConfirmError=@Validation Other="Other" OtherText="Last"/>
    </Body>

</GameEventComponentLayout>

@code {

    protected override bool IsUrgent => true;
    protected override Faction IsFactionSpecific => Faction.White;

    protected override WhiteAnnouncesAuction ConfirmedResult => new WhiteAnnouncesAuction(Game) { Initiator = Faction, First = true };

    protected override WhiteAnnouncesAuction OtherResult => new WhiteAnnouncesAuction(Game) { Initiator = Faction, First = false };
}
