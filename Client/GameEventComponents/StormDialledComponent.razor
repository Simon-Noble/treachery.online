@using Treachery.Client.GenericComponents;
@using Treachery.Shared
@inherits GameEventComponent<StormDialled>

<div class="card p-1 mb-2 @Border" style="@BackgroundStyle">

    <div class="card-header">
        Please dial a number for determining storm movement
    </div>

    <div class="card-body">

        <SelectComponent @bind-Value="amount" Values="StormDialled.ValidAmounts(h.Game)">
            <Label>Amount to dial</Label>
        </SelectComponent>

        <button class="btn btn-primary" @onclick="Confirm" disabled=@(!Valid)>Ok</button>

        <div class="text-danger bg-dark">@validationError</div>

    </div>


</div>

@code {

    private int amount;

    protected override void OnAfterRender(bool firstRender)
    {
        Initialize<int, int>(ref amount, StormDialled.ValidAmounts(h.Game));
    }

    protected override StormDialled ConfirmedResult
    {
        get
        {
            return new StormDialled(h.Game) { Initiator = h.Faction, Amount = amount };
        }
    }
}
