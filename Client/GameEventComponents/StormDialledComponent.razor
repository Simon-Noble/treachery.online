@using Treachery.Client.GenericComponents;
@using Treachery.Shared
@inherits GameEventComponent<StormDialled>

<GameEventComponentLayout Border="@Border" BackgroundStyle="@BackgroundStyle" HeaderStyle="@HeaderStyle" BodyStyle="@BodyStyle" @bind-Collapsed="@Collapsed">

    <Header>Please dial a number to determine storm movement</Header>
    <Body>

        <SelectNumberComponent @bind-Value="amount" Min="StormDialled.ValidMinAmount(Game)" Max="StormDialled.ValidMaxAmount(Game)" />
        <ButtonRowComponent Confirm="Confirm" ConfirmText="@Skin.Current.Format("Dial {0}", amount)" ConfirmError="@Validation" />

    </Body>

</GameEventComponentLayout>

@code {

    protected override bool IsUrgent => true;

    private int amount;
        
    protected override StormDialled ConfirmedResult => new StormDialled(Game) { Initiator = Faction, Amount = amount };
}
