@using Treachery.Shared
@using Treachery.Client.GenericComponents;
@inherits GameEventComponent<BrownEconomics>

<GameEventComponentLayout Border="@Border" BackgroundStyle="@BackgroundStyle" HeaderStyle="@HeaderStyle" BodyStyle="@BodyStyle" @bind-Collapsed="@Collapsed">

    <Header>Play Economics?</Header>
    <Body>

        <RadioComponent @bind-Value="status" Values="new BrownEconomicsStatus[] { BrownEconomicsStatus.Double, BrownEconomicsStatus.Cancel }"/>

        <ButtonRowComponent Confirm="Confirm" ConfirmText="Confirm" ConfirmError="@Validation" />

    </Body>

</GameEventComponentLayout>

@code {

    protected override Faction IsFactionSpecific => Faction.Brown;

    private BrownEconomicsStatus status = BrownEconomicsStatus.Double;

    protected override BrownEconomics ConfirmedResult => new BrownEconomics(Game) { Initiator = Faction, Status = status };
}
