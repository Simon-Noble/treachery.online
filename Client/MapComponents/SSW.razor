@using Treachery.Shared 
@inherits MapComponent

@{
    if (Game.Applicable(Rule.SSW))
    {
        if (Game.IsSpecialStronghold(Game.Map.ShieldWall))
        {
            <MapTerritory h="h" ToShow="Game.Map.ShieldWall" FillColor="#FF6F34" FillOpacity="0.5f" StrokeColor="transparant" StrokeWidth="0" />
        }
        else
        {
            var position = Game.Map.ShieldWall.MiddleLocation.Center;

            for (int i = 0; i < Game.NumberOfMonsters; i++)
            {
                <Image X="@(i * 0.7f * Skin.Current.MONSTERTOKEN_RADIUS + position.X - 0.35f * Skin.Current.MONSTERTOKEN_RADIUS - 20)" 
                       Y="position.Y - 50" Width=@(0.7f * Skin.Current.MONSTERTOKEN_RADIUS) Height=@(0.7f * Skin.Current.MONSTERTOKEN_RADIUS) Src=@Skin.Current.Monster_URL 
                       ShadowColor="white" ShadowX="2" ShadowY="2" ShadowBlur="4"/>
            }
        }
    }
}
