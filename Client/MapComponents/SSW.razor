@using Treachery.Shared 
@inherits MapComponent

@{
    if (Game.Applicable(Rule.SSW) && !Game.IsSpecialStronghold(Game.Map.ShieldWall))
    {
        var position = Skin.Current.GetCenter(Game.Map.ShieldWall.MiddleLocation);

        for (int i = 0; i < Game.NumberOfMonsters; i++)
        {
            <Image X="@(i * 0.7f * Skin.Current.MONSTERTOKEN_RADIUS + position.X - 0.35f * Skin.Current.MONSTERTOKEN_RADIUS)" 
                   Y="position.Y" Width=@(0.7f * Skin.Current.MONSTERTOKEN_RADIUS) Height=@(0.7f * Skin.Current.MONSTERTOKEN_RADIUS) Src=@Skin.Current.Monster_URL 
                   ShadowColor="white" ShadowX="1" ShadowY="1" ShadowBlur="1"/>
        }
    }
}
