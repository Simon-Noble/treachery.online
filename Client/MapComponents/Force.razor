@using Treachery.Shared;
@inherits MapComponent;

@{
    for (int i = 0; i < Amount; i++)
    {
        <Image X=@(X - i * 3 - Skin.Current.FORCETOKEN_RADIUS) Y=@(Y - i * 5 - Skin.Current.FORCETOKEN_RADIUS) Width=@(2*Skin.Current.FORCETOKEN_RADIUS) Height=@(2*Skin.Current.FORCETOKEN_RADIUS) Src="@ForceURL" />
    }
}

<MapText X=@(X+30) Y=@(Y) Font=@Skin.Current.FORCETOKEN_FONT BorderWidth=@Skin.Current.FORCETOKEN_FONT_BORDERWIDTH BorderColor=@Skin.Current.FORCETOKEN_FONT_BORDERCOLOR>@Amount</MapText>

@code {

    [Parameter]
    public bool Special { get; set; }

    [Parameter]
    public int Amount { get; set; }

    [Parameter]
    public Faction Faction { get; set; }

    [Parameter]
    public bool Threatened { get; set; }

    private string ForceURL => Special ? Skin.Current.GetFactionSpecialForceImageURL(Faction) : Skin.Current.GetFactionForceImageURL(Faction);
}
