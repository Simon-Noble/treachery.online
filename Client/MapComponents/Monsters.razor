@using Treachery.Shared 
@inherits MapComponent

@foreach (var t in h.Game.Monsters)
{
    var position = Skin.Current.GetCenter(t.MiddleLocation);

    <Image X="@(position.X - Skin.Current.MONSTERTOKEN_RADIUS)" Y="@(position.Y - Skin.Current.MONSTERTOKEN_RADIUS)" Width=@(2 * Skin.Current.MONSTERTOKEN_RADIUS) Height="@(2 * Skin.Current.MONSTERTOKEN_RADIUS)" Src="@Skin.Current.Monster_URL" ShadowColor="@Skin.Current.SHADOW" ShadowX="2" ShadowY="2" ShadowBlur="1"/>
}
