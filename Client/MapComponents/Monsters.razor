@using Treachery.Shared 
@inherits MapComponent

@{
    foreach (var t in h.Game.Monsters)
    {
        var position = t.MiddleLocation.Center;
        <Image X="@(position.X - Skin.Current.MONSTERTOKEN_RADIUS)" Y="@(position.Y - Skin.Current.MONSTERTOKEN_RADIUS)" Width=@(2 * Skin.Current.MONSTERTOKEN_RADIUS) Height="@(2 * Skin.Current.MONSTERTOKEN_RADIUS)" Src="@Skin.Current.Monster_URL" ShadowColor="@Skin.Current.SHADOW_DARK" ShadowX="5" ShadowY="5" ShadowBlur="3"/>
    }
}
