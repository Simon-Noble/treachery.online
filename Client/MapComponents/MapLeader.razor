@using Treachery.Shared;
@inherits MapComponent;

<Image X=X Y=Y Diameter=@Diameter Src="@LeaderURL" ShadowColor="@Skin.Current.SHADOW_LIGHT" ShadowX="5" ShadowY="5" ShadowBlur="3" Popover="@Popover"/>

@code {

    [Parameter]
    public IHero ToShow { get; set; }

    [Parameter]
    public bool ShowPopover { get; set; } = true;

    private string LeaderURL => Skin.Current.GetImageURL(ToShow);

    private string Popover => ShowPopover ? Support.GetHeroHoverHTML(ToShow, Game) : null;
}
