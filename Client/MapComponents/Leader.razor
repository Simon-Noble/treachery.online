@using Treachery.Shared;
@inherits MapComponent;

<Image X=X Y=Y Diameter=@Diameter Src="@LeaderURL" ShadowColor="@Skin.Current.SHADOW_LIGHT" ShadowX="5" ShadowY="5" ShadowBlur="3" Popover="@Support.GetHeroHoverHTML(ToShow, Game)"/>

@code {

    [Parameter]
    public IHero ToShow { get; set; }

    protected override void OnInitialized()
    {
        Diameter = 3 * Skin.Current.FORCETOKEN_RADIUS;
    }

    private string LeaderURL => Skin.Current.GetImageURL(ToShow);
}
