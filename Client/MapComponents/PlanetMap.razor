@using Treachery.Shared

<div style="position: relative; width: 100%; height: 100%; transform: scale(0.25)">

    <div style="position:absolute; width:@Px(Skin.Current.MapDimensions.X); height:@Px(Skin.Current.MapDimensions.Y);">

        <Image X="0" Y="0" Width=@(Skin.Current.MapDimensions.X) Height=@(Skin.Current.MapDimensions.Y) Src=@Skin.Current.Map_URL />

        <div style="transform:matrix(0.992126,0,0,0.99369,-140.572,-114.998)">

            <ForcesOnPlanet Game="h.Game" />

            <Territory ToShow="h.Game.Map.PolarSink.Territory" FillColor="white" FillOpacity="0.8f" StrokeColor="red" StrokeWidth="2.0f" />
    
        </div>

    </div>

</div>

@code {

    [Parameter]
    public Handler h { get; set; }

    private string Px(float x) => x + "px";
}
