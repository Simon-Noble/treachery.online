@inherits MapComponent

@if (Popover != null)
{
    <img @onclick="@OnClick" title="@Title" style="@Style" src=@Src data-trigger="hover" data-toggle="popover" data-html="true" data-animation="true" data-delay="100" data-content="@Popover" data-template="@PopoverTemplate"/>
}
else
{
    <img @onclick="@OnClick" title="@Title" style="@Style" src=@Src />
}

@code {

    [Parameter]
    public string Src { get; set; }

    [Parameter]
    public int ShadowX { get; set; } = 0;

    [Parameter]
    public int ShadowY { get; set; } = 0;

    [Parameter]
    public int ShadowBlur { get; set; } = 0;

    [Parameter]
    public string ShadowColor { get; set; } = "black";

    [Parameter]
    public string Title { get; set; } = "";

    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }

    [Parameter]
    public string Popover { get; set; } = null;

    private string Style
    {
        get
        {
            var result = string.Format("position:absolute;left:{0};top:{1};width:{2};height:{3};opacity:{4};", Px(X), Px(Y), Px(Width), Px(Height), Opacity);

            if (OnClick.HasDelegate || Popover != null)
            {
                result += "cursor:pointer;pointer-events:all;";
            }

            if (ShadowX > 0 || ShadowY > 0)
            {
                result += string.Format("filter:drop-shadow({0} {1} {2} {3});", Px(ShadowX), Px(ShadowY), Px(ShadowBlur), ShadowColor);
            }

            return result;
        }
    }
}
