@using Treachery.Shared 
@inherits MapComponent

<Territory h="h" ToShow="@ToShow.Territory" FillColor="@FillColor" FillOpacity="@FillOpacity" StrokeColor="transparent" StrokeWidth="0" SpecificLocation="ToShow" Popover="@Intel(ToShow)" OnLocationClick="@OnLocationClick"/>

@code {

    [Parameter]
    public Treachery.Shared.Location ToShow { get; set; }

    [Parameter]
    public string FillColor { get; set; }

    [Parameter]
    public float FillOpacity { get; set; } = 0f;

    [Parameter]
    public string FillRule { get; set; } = "";

    [Parameter]
    public EventCallback<LocationEventArgs> OnLocationClick { get; set; }

    
}

