@using Treachery.Shared
@inherits MapComponent

@if (h.IsDisconnected)
{
    <MapText ToShow="You were disconnected from the game."
             X="@(Skin.Current.PlanetCenter.X)" Y="@(Skin.Current.PlanetCenter.Y)"
             Font="@Skin.Current.TURN_FONT" FontColor="darkred"
             BorderWidth="@Skin.Current.TURN_FONT_BORDERWIDTH" BorderColor="white"
             Align="@TextAlignment.Center" />

    string message;
    if ((DateTime.Now - h.Disconnected).TotalSeconds < 60)
    {
        message = "Please wait while the game is trying to reconnect...";
    }
    else
    {
        message = "Trying to reconnect, but the host may have ended or restarted the game or your internet connection may be broken...";
    }

    <MapText ToShow="@message"
             X="@(Skin.Current.PlanetCenter.X)" Y="@(1.1f * Skin.Current.PlanetCenter.Y)"
             Font="@Skin.Current.PLAYERNAME_FONT" FontColor="darkred"
             BorderWidth="@Skin.Current.PLAYERNAME_FONT_BORDERWIDTH" BorderColor="white"
             Align="@TextAlignment.Center" />
}
