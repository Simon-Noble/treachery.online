@using Treachery.Shared

<img class="img-fluid" src="@Skin.Current.GetImageURL(Faction)" width="@Diameter" height="@Diameter" title=@Skin.Current.Describe(Faction) style="@Shadow"/>

@code {

    [Parameter]
    public Faction Faction { get; set; } = Faction.Black;

    [Parameter]
    public int Diameter { get; set; } = 30;

    [Parameter]
    public bool HasShadow { get; set; } = true;

    private string Shadow => HasShadow ? "filter: drop-shadow(1px 1px 1px black);" : "";
}
