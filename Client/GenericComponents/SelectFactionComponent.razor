@using System.Collections.Generic;
@using Treachery.Shared;

<SelectFromImageComponent @bind-Value="Value" Values="@Values" ImageURLs="Values.Select(f => Skin.Current.GetImageURL(f))" ImageWidth="50" />

@code {

    [Parameter]
    public IEnumerable<Faction> Values { get; set; }

    private Faction _value;

    [Parameter]
    public Faction Value
    {
        get
        {
            return _value;
        }
        set
        {
            if (_value != value)
            {
                _value = value;
                ValueChanged.InvokeAsync(value);
            }
        }
    }

    [Parameter]
    public EventCallback<Faction> ValueChanged { get; set; }
}

