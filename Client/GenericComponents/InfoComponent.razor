</Hoverable>

@code {

    [Parameter]
    public string Contents { get; set; } = "";

    [Parameter]
    public string Color { get; set; } = "currentColor";

    [Parameter]
    public string BackgroundColor { get; set; } = "blue";

    [Parameter]
    public string ContentsClass { get; set; } = "bg-dark text-white border border-white p-1";

    [Parameter]
    public int Size { get; set; } = 16;

    private string FormattedContents
    {
        get
        {
            return string.Format("<div class='{0}'>{1}</div>", ContentsClass, Contents);
        }
    }
}
