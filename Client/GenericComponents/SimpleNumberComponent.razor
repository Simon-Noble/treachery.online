<svg width=@Support.Round(Size) height=@Support.Round(Size)>
    <circle cx=@Radius cy=@Radius r=@Radius fill="white"/>
    <text font-size="smaller" x=@Radius y=@Radius text-anchor="middle" dominant-baseline="middle" stroke="black">@ChildContent</text>
</svg>


@code {

    [Parameter]
    public float Size { get; set; } = 20;

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    private string Radius { get; set; } 

    protected override void OnParametersSet()
    {
        base.OnParametersSet();

        Radius = Support.Round(0.5f * Size);
    }
}