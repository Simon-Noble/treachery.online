@using System.Collections.Generic;
@using Treachery.Shared;
@inherits GameComponent;
@typeparam T

<div class="form-check">
    <input class="form-check-input" style="cursor:pointer" id="@Id" type="checkbox" disabled="@Disabled" checked="@Values.Contains(Value)" @onchange="e => { CheckboxClicked(Value, e.Value); }" />
    <label class="form-check-label" style="cursor:pointer" for="@Id">@Skin.Current.Describe(Value) @ChildContent</label>
</div>

@code {

    [Parameter]
    public T Value { get; set; }

    [Parameter]
    public List<T> Values { get; set; }

    [Parameter]
    public Action Callback { get; set; } = null;

    [Parameter]
    public bool Disabled { get; set; } = false;

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    private void CheckboxClicked(T value, object checkedValue)
    {
        bool check = (bool)checkedValue;
        if (check)
        {
            Values.Add(value);
        }
        else
        {
            Values.Remove(value);
        }

        if (Callback != null)
        {
            Callback.Invoke();
        }
    }
}
