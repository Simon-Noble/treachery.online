@using Treachery.Shared;
@inherits Component 

<img class="img-float" width=@Size height=@Size src="@Skin.Current.GetImageURL(Value)" data-bs-animation="true" data-bs-content="@Support.GetHeroHoverHTML(Value, Game)" data-bs-html="true" data-bs-placement="top" data-bs-trigger="hover" data-bs-toggle="popover"/>

@code {

    [Parameter]
    public IHero Value { get; set; }

    [Parameter]
    public Game Game { get; set; }

    [Parameter]
    public int Size { get; set; } = 30;

}
