@using Treachery.Shared;
@inherits Component 

<img class="img-float" width=@Size height=@Size src="@Skin.Current.GetImageURL(Value)" data-animation="true" data-content="@Support.GetHeroHoverHTML(Value, Game)" data-html="true" data-placement="top" data-trigger="hover" data-toggle="popover"/>

@code {

    [Parameter]
    public IHero Value { get; set; }

    [Parameter]
    public Game Game { get; set; }

    [Parameter]
    public int Size { get; set; } = 30;

}
