@using System.Collections.Generic;
@using Treachery.Shared;

<SelectFromImageComponent @bind-Value="Value" Values="Values" ImageURLs="Values.Select(c => Skin.Current.GetImageURL(c))" PopupHTMLs="Values.Select(c => Popup.Get(c, Game))" Required="Required" ImageWidth="80" OnChanged="@OnChanged">
    <Label>@Label</Label>
</SelectFromImageComponent>

@code {

    [Parameter]
    public IEnumerable<IHero> Values { get; set; }

    [Parameter]
    public bool Required { get; set; } = true;

    private IHero _value;

    [Parameter]
    public IHero Value
    {
        get
        {
            return _value;
        }
        set
        {
            if (_value != value)
            {
                _value = value;
                ValueChanged.InvokeAsync(value);
            }
        }
    }

    [Parameter]
    public Game Game { get; set; }

    [Parameter]
    public EventCallback<IHero> ValueChanged { get; set; }

    [Parameter]
    public RenderFragment Label { get; set; }

    [Parameter]
    public Action<IHero> OnChanged { get; set; }
}

