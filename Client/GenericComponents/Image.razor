@using Treachery.Shared;
@implements IDisposable;
@typeparam T;

@if (Popover != null && Popover.Length > 0)
{
    <img @ref=@element class=@Class style=@Style width=@ImgWidth src=@Src data-bs-toggle="popover" data-bs-animation="true" data-bs-html="true" data-bs-placement="auto" data-bs-trigger="hover" data-bs-content=@Popover>
}
else if (Shown != null)
{
    <img @ref=@element class=@Class style=@Style width=@ImgWidth src=@Src title=@Skin.Current.Describe(Shown)>
}
else
{
    <img @ref=@element class=@Class style=@Style width=@ImgWidth src=@Src>
}

@code {

    [Parameter]
    public T Shown { get; set; }

    [Parameter]
    public string Src { get; set; } = "";

    [Parameter]
    public float Width { get; set; } = 0;

    [Parameter]
    public string Class { get; set; } = "";

    [Parameter]
    public string Style { get; set; } = "";

    [Parameter]
    public string Popover { get; set; } = null;

    [Parameter]
    public bool ShowPopover { get; set; } = true;

    private ElementReference element;
    private string ImgWidth;

    protected override void OnParametersSet()
    {
        if (Shown != null) {

            Src = Skin.Current.GetImageURL(Shown);

            if (ShowPopover) {
            
                Popover = Support.GetHoverHTML(Shown);
            }
        }

        ImgWidth = Width > 0 ? Support.Round(Width) : "";
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && Popover != null)
        {
            await Browser.EnablePopover(element);
        }
    }

    public void Dispose()
    {
        if (Popover != null)
        {
            _ = Browser.RemovePopover(element);
        }
    }
}
