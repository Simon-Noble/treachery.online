@using System.Collections.Generic;
@using Treachery.Shared;

<SelectFromImageComponent @bind-Value="Value" Values="Values" ImageURLs="Values.Select(c => Skin.Current.GetImageURL(c))" PopupHTMLs="Values.Select(c => Support.GetTreacheryCardHoverHTML(c))" Required="Required" ImageWidth="80" Label="@Label"/>

@code {

    [Parameter]
    public IEnumerable<TreacheryCard> Values { get; set; }

    [Parameter]
    public RenderFragment Label { get; set; }

    [Parameter]
    public bool Required { get; set; }

    private TreacheryCard _value;

    [Parameter]
    public TreacheryCard Value
    {
        get
        {
            return _value;
        }
        set
        {
            if (_value != value)
            {
                _value = value;
                ValueChanged.InvokeAsync(value);
            }
        }
    }

    [Parameter]
    public EventCallback<TreacheryCard> ValueChanged { get; set; }
}

